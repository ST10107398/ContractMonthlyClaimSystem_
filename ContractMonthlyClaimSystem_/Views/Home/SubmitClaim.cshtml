<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" class="form-control" name="HoursWorked" required />
    </div>
    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        <input type="number" class="form-control" name="HourlyRate" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="Notes">Additional Notes</label>
        <textarea class="form-control" name="Notes"></textarea>
    </div>
    <div class="form-group">
        <label for="SupportingDocument">Upload Document</label>
        <input type="file" class="form-control" name="SupportingDocument" accept=".pdf,.docx,.xlsx" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

